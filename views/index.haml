- if @error
  %p.warn= @error

#frameholder
  %h3
    =@frame.title 
  %p.content
    =@frame.text.gsub("\r\n", "<br>")
  #footer
    #ts_left
      
    #ts_right
      =@frame.timestamp.strftime("%H:%M")
      
      
%nav
  %a{:href => "?prev=#{@frame.timestamp}&dir=back"} << Earlier
  %a{:href => "?prev=#{@frame.timestamp}&dir=fwd"} Later >>